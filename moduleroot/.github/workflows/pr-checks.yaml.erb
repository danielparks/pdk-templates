name: PR checks

on:
  workflow_dispatch:
  push:
    branches:
      - $default-branch
  pull_request:

env:
  VALIDATE_DISTRO: ubuntu-22.04
  VALIDATE_DISTRO_NAME: jammy

jobs:
  validate:
    name: Validate
    runs-on: {{ $env.VALIDATE_DISTRO }}

    steps:
    - uses: actions/checkout@v3
    - name: Install pdk
      run: |
        wget https://apt.puppet.com/puppet-tools-release-{{ $env.VALIDATE_DISTRO_NAME }}.deb
        sudo dpkg -i puppet-tools-release-{{ $env.VALIDATE_DISTRO_NAME }}.deb
        rm puppet-tools-release-{{ $env.VALIDATE_DISTRO_NAME }}.deb
        sudo apt-get update
        sudo apt-get install -y pdk
    - run: pdk validate
<% if @configs['validate-REFERENCE.md'] %>
    - name: Confirm REFERENCE.md is up-to-date
      run: |
        pdk bundle exec puppet strings generate --format markdown
        git add .
        git diff --staged --color --exit-code
<% end -%>
<% if @configs['validate-pdk-update'] %>
    - name: Confirm PDK update does nothing
      run: |
        pdk update --force
        git add .
        git diff --staged  --color --exit-code
<% end -%>

  test-unit:
    name: Unit tests
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - uses: ruby/setup-ruby@v1
      with:
        ruby-version: "2.7"
        bundler-cache: true
    - run: bundle exec rake spec

  test-acceptance:
    name: Acceptance tests
    runs-on: ubuntu-latest
    strategy:
      matrix:
        image: ['litmusimage/centos:7']
        agent: ['puppet7', 'puppet8']

    steps:
    - uses: actions/checkout@v3
    - uses: ruby/setup-ruby@v1
      with:
        ruby-version: "2.7"
        bundler-cache: true
    - run: bundle exec rake 'litmus:provision[docker, ${{ matrix.image }}]'
    - run: bundle exec rake 'litmus:install_agent[${{ matrix.agent }}]'
    - run: bundle exec rake 'litmus:install_module'
    - run: bundle exec rake 'litmus:acceptance:parallel'
